# Kerberos Sidecar Configuration Template
# Copy this to .env and configure for your environment

# === Production Configuration (using keytab) ===
KRB_PRINCIPAL=svc_airflow@COMPANY.COM
KRB_REALM=COMPANY.COM
KRB_KEYTAB_PATH=/krb5/keytabs/airflow.keytab
KRB_RENEWAL_INTERVAL=3600

# Path to krb5.conf from WSL2 host
KRB5_CONF_HOST=/etc/krb5.conf

# Path to keytab file on host (for production)
KRB_KEYTAB_HOST=./config/airflow.keytab

# === Development Configuration (using password) ===
# Uncomment these for password-based authentication
# USE_PASSWORD=true
# KRB_PASSWORD=your_password_here

# === Test Environment Configuration ===
# For local KDC testing without domain
# TEST_MODE=true
# KRB_PRINCIPAL=airflow@TEST.LOCAL
# KRB_REALM=TEST.LOCAL
# KRB_PASSWORD=airflow123

# === SQL Server Connection Settings ===
MSSQL_SERVER=sql.company.com
MSSQL_PORT=1433
MSSQL_DATABASE=DataWarehouse
MSSQL_INTEGRATED_SECURITY=true

# === Docker Registry (if using private registry) ===
REGISTRY_URL=registry.localhost
REGISTRY_USERNAME=
REGISTRY_PASSWORD=
